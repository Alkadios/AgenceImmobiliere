{% extends 'base.html.twig' %}

{% block title %}Se connecter - Agence Immobili√®re Loucasse{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="_username">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ username }}">
            </div>
            <div class="form-group">
                <label for="_password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>
{% endblock %}
