{% extends 'base.html.twig' %}

{% block title %}Admin - Options{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les options :</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for option in options %}
                    <tr>
                        <td>{{ option.name }}</td>
                        <td>
                            <a href="{{ path('admin_option_edit', {'id': option.id}) }}" class="btn btn-primary fas fa-pen">Editer</a>
                            <a href="{{ path('admin_option_delete', {'id': option.id}) }}" class="btn btn-danger fas fa-trash">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        <div class="text-right">
            <a href="{{ path('admin_option_new') }}" class="btn btn-primary fas fa-pen">Créer une nouvelle annonce</a>
        </div>
    </div>
{% endblock %}
